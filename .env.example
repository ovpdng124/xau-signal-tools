# Trading Symbol - Cặp giao dịch chính
SYMBOL=XAU/USD

# Database - Kết nối PostgreSQL database
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/xau_signals

# Crawl Settings - Thiết lập thời gian crawl dữ liệu lịch sử
CRAWL_START_DATE=2024-01-01 00:00:00
CRAWL_END_DATE=2024-12-31 23:59:59

# Backtest Settings - Thiết lập thời gian chạy backtest
BACKTEST_START_DATE=2024-01-01 00:00:00
BACKTEST_END_DATE=2024-12-31 23:59:59

# Trading Parameters - Tham số trading (đơn vị USD)
TP_AMOUNT=6.0  # Số tiền Take Profit
SL_AMOUNT=3.0  # Số tiền Stop Loss

# Strong Signal Parameters - Tham số cho tín hiệu mạnh (khi râu nến cắt đường SuperTrend)
STRONG_SIGNAL_TP=12.0    # Take Profit cho tín hiệu mạnh (USD)
STRONG_SIGNAL_SL_BUFFER=0.5  # Buffer thêm vào giá râu nến cho Stop Loss (USD)

# Timeframe Configuration - Timeframe mặc định cho system (1m, 5m, 15m, 30m, 1h, 4h, 1d)
DEFAULT_TIMEFRAME=15m

# Logging - Thiết lập logging
LOG_LEVEL=INFO  # Mức độ log (DEBUG, INFO, WARNING, ERROR)
LOG_DIR=logs    # Thư mục lưu log files

# Backtest Configuration - Cấu hình backtest
ENABLE_TIMEOUT=true   # Bật/tắt timeout cho orders
TIMEOUT_HOURS=24      # Số giờ timeout (0 = không timeout)

# Trading Time Window Configuration - Cấu hình khung giờ giao dịch
ENABLE_TIME_WINDOW=false  # Bật/tắt giới hạn khung giờ giao dịch
TRADE_START_TIME=16:00    # Thời gian bắt đầu giao dịch (HH:MM)
TRADE_END_TIME=23:00      # Thời gian kết thúc giao dịch (HH:MM)

# Single Order Mode Configuration - Cấu hình chế độ chỉ 1 order tại một thời điểm
ENABLE_SINGLE_ORDER_MODE=false  # Bật/tắt chế độ single order

# Telegram Configuration - Cấu hình Telegram bot cho thông báo
TELEGRAM_BOT_TOKEN=your_bot_token_here  # Token của Telegram bot
TELEGRAM_CHAT_ID=your_chat_id_here      # Chat ID để gửi thông báo
ENABLE_TELEGRAM_NOTIFICATIONS=true     # Bật/tắt thông báo Telegram

# Daemon Scheduler Configuration - Cấu hình chế độ daemon tự động
SCHEDULER_ENABLED=true              # Bật/tắt scheduler daemon
CRAWL_INTERVAL_MINUTES=15          # Khoảng cách giữa các lần crawl (phút)
AUTO_DETECT_ENABLED=true           # Tự động detect signal sau khi crawl
HEALTH_CHECK_INTERVAL_MINUTES=60   # Khoảng cách health check (phút)